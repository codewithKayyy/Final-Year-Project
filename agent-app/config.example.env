# Security Simulation Agent Configuration
# Copy this file to .env and modify as needed

# Unique identifier for this agent (auto-generated if not specified)
# AGENT_ID=agent_custom_name

# Backend WebSocket URL - REQUIRED
# This should point to your main backend server
BACKEND_WS_URL=http://10.0.0.100:3001

# Telemetry reporting interval in milliseconds (default: 30000 = 30 seconds)
TELEMETRY_INTERVAL=30000

# Optional: Custom hostname override
# HOSTNAME_OVERRIDE=my-custom-hostname

# Optional: Environment identifier (dev, staging, prod)
ENVIRONMENT=production